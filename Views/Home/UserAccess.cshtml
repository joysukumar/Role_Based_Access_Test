
@{
    ViewData["Title"] = "User Dashboard";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 text-success">Welcome to the Dummy User Dashboard</h1>
        <p class="lead text-secondary">Access your profile, track activity, and explore available features.</p>
        <hr class="my-4">
